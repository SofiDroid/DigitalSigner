<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
        <!--        <param-value>Production</param-value>-->
    </context-param>
    <context-param>
        <param-name>javax.faces.WEBAPP_RESOURCES_DIRECTORY</param-name>
        <param-value>/resources</param-value>
    </context-param>
    <!--    <context-param>
        <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
        <param-value>client</param-value>
    </context-param>-->
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AppInit</servlet-name>
        <servlet-class>init.AppInit</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>AppInit</servlet-name>
        <url-pattern>/AppInit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>entradaFicheroAutoFirma</servlet-name>
        <servlet-class>servlets.firmaelectronica.EntradaFicheroAutoFirma</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>entradaFicheroAutoFirma</servlet-name>
        <url-pattern>/entradaFicheroAutoFirma</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>bajadaFicheroFirma</servlet-name>
        <servlet-class>servlets.firmaelectronica.BajadaFicheroFirma</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bajadaFicheroFirma</servlet-name>
        <url-pattern>/bajadaFicheroFirma</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>salidaFicheroAutoFirma</servlet-name>
        <servlet-class>servlets.firmaelectronica.SalidaFicheroAutoFirma</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>salidaFicheroAutoFirma</servlet-name>
        <url-pattern>/salidaFicheroAutoFirma</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>subidaFicheroFirmado</servlet-name>
        <servlet-class>servlets.firmaelectronica.SubidaFicheroFirmado</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>subidaFicheroFirmado</servlet-name>
        <url-pattern>/subidaFicheroFirmado</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>init.filtros.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>
                com.sun.xml.ws.transport.http.servlet.WSServletContextListener
        </listener-class>
    </listener>
    <servlet>
        <servlet-name>DocumentService</servlet-name>
        <servlet-class>
                    com.sun.xml.ws.transport.http.servlet.WSServlet
            </servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>DocumentService</servlet-name>
        <url-pattern>/DocumentService</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
